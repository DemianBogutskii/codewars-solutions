#first solution

def womens_age(n):
    return f"{n}? That's just 20, in base {n // 2}!" if n % 2 == 0 else f"{n}? That's just 21, in base {n // 2}!"

#second solution

def womens_age(n):
    return f"{n}? That's just 2{n % 2}, in base {n // 2}!"
